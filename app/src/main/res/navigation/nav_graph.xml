<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/scheduleFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.educationgallery.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/photoFragment"
        android:name="com.example.educationgallery.ui.fragments.PhotoFragment"
        android:label="fragment_photo"
        tools:layout="@layout/fragment_photo" />

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.educationgallery.ui.fragments.ScheduleFragment"
        android:label="fragment_schedule"
        tools:layout="@layout/fragment_schedule" />

    <action
        android:id="@+id/action_to_photoFragment"
        app:destination="@id/photoFragment" />
    <action
        android:id="@+id/action_to_scheduleFragment"
        app:destination="@id/scheduleFragment" />
</navigation>